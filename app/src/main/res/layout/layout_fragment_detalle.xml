<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:background="@color/colorDetalle">

    <ImageView
        android:id="@+id/imagen_detalle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:src="@drawable/images3"></ImageView>

    <TextView
        android:id="@+id/nombre_detalle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"></TextView>

    <TextView
        android:id="@+id/apellido_detalle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"></TextView>

    <TextView
        android:id="@+id/telefono_detalle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"></TextView>

</LinearLayout>